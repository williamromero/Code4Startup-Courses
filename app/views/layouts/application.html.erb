<!DOCTYPE html>
<html>
<head>
  <title>Alquileres vacacionales, vacaciones :: WILLBNB</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissable top-login-bar">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <%= value %>
    </div>
  <% end %>

    <!-- Static navbar -->
  <nav class="navbar navbar-light bg-faded">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">
          <%= image_tag 'wllbnb.svg', alt: 'wllbnb-logo', style:'height: auto; width: 50px;' %>
          <strong style="color: #22b573;">&nbsp; WILLBNB</strong>
        </a>
      </div>

      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <% if(!user_signed_in?) %>
            <div style="display: flex;">
              <%= link_to "Log In", new_user_session_path, class:'nav-link' %>
              &nbsp;&nbsp;&nbsp;
              <%= link_to "Sign Up", new_user_registration_path, class:'nav-link' %>
            </div>
          <% else %>
            <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.email %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item" href="#">Your Trips</a>
              <a class="dropdown-item" href="#">Wish Lists</a>
              <a class="dropdown-item" href="#">Account Setting</a>
              <%= link_to "Edit Profile", edit_user_registration_path, class:'dropdown-item' %>
              <%= link_to "Log out", destroy_user_session_path, class:'dropdown-item', method: :delete %>
            </div>
          <% end %>
        </li>
      </ul>

    </div>
  </div>
  </nav>
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
